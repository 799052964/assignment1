<%- include partials/header.ejs %>
<!-- picture div -->
<div class="container text-center">
    <h1><%= title %></h1>
    <div class="center-block"><img src="/images/page5.jpg" alt="img 5"></div>
</div>
<!-- message div-->
<div class="container text-center">
    <h2><%= message %></h2>
    <div class="container">
        <form action="/contactMe" method="post">
            <div class="form-group">
                <label  for="yourname">Name:</label>
                <input id="yourname" placeholder="Please type your name" name="name" required="" size="40" type="text">
            </div>
            <div class="form-group">
                <label for="youremail">Email:</label>
                <input id="youremail" placeholder="Please type your e-mail" name="email" required="" size="40" type="email">
            </div>
            <div class="form-group">
                <label for="yourmessage">What do you want to say?</label><br/>
                <textarea id="yourmessage" name="message" placeholder="What do you want to say to me?" required=""></textarea>
            </div>
            <p><input value="Submmit" class="lead-form-bottom-submit" type="submit"></p>
        </form>
    </div>
</div>

<%- include partials/footer.ejs %>
